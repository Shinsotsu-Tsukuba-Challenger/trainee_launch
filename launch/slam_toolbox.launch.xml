<launch>
  <arg name="use_respawn"               default="false"/>
  <arg name="use_rviz"                  default="true"/>
  <arg name="use_sim_time"              default="false"/>
  <arg name="autostart"                 default="true"/>
  <arg name="log_level"                 default="info"/>
  <arg name="slam_toolbox_params_file"  default="$(find-pkg-share trainee_launch)/config/param/slam_toolbox.param.yaml"/>
  <arg name ="rviz_config"              default="$(find-pkg-share trainee_launch)/config/rviz/slam_toolbox.rviz"/>

  <node pkg="nav2_map_server" exec="map_saver_server" output="screen" respawn="$(var use_respawn)">
    <param name="use_sim_time"              value="$(var use_sim_time)"/>
    <param name="log_level"                 value="$(var log_level)"/>
    <param name="slam_toolbox_params_file"  value="$(var slam_toolbox_params_file)"/>
  </node>

  <node pkg="nav2_lifecycle_manager" exec="lifecycle_manager" name="lifecycle_manager_slam" output="screen" ros_args="--log-level $(var log_level)">
    <param name="use_sim_time"  value="$(var use_sim_time)"/>
    <param name="autostart"     value="$(var autostart)"/>
    <param name="node_names"    value="['map_saver']"/>
  </node>

  <node pkg="slam_toolbox" exec="async_slam_toolbox_node" name="slam_toolbox" output="screen" ros_args="--log-level $(var log_level)">
    <param name="use_sim_time"              value="$(var use_sim_time)"/>
    <param name="slam_toolbox_params_file"  value="$(var slam_toolbox_params_file)"/>
  </node>

  <group if="$(var use_rviz)">
    <node pkg="rviz2" exec="rviz2" name="rviz2" namespace="" args="-d $(var rviz_config)"/>
  </group>
</launch>
